<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.fg.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_main"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommentActivity"
            android:configChanges="orientation|screenLayout"
            android:label="@string/title_comments_activity" >
        </activity>
        <activity
            android:name=".PostsActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden"
            android:label="@string/title_activity_posts" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_main"
            android:noHistory="true" >
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="@string/imgdesc" >
        </activity>
        <activity
            android:name=".UsersActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden" >
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden" >
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden" >
        </activity>
        <activity
            android:name=".RegActivity"
            android:configChanges="orientation|screenLayout|keyboardHidden" >
        </activity>
    </application>

</manifest>